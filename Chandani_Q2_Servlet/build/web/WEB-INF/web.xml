<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>db-url</param-name>
        <param-value>jdbc:mysql://localhost:3306/chandani_java?zeroDateTimeBehavior=convertToNull</param-value>
    </context-param>
    <context-param>
        <param-name>db-user</param-name>
        <param-value>root</param-value>
    </context-param>
    <listener>
        <description>ServletContextListener, HttpSessionListener</description>
        <listener-class>Liteners.Q2_C_ServletListener</listener-class>
    </listener>
    <listener>
        <description>ServletContextListener, HttpSessionListener</description>
        <listener-class>Liteners.NewServletListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>RegistrationFormServlet</servlet-name>
        <servlet-class>Servlets.RegistrationFormServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConfirmFormServlet</servlet-name>
        <servlet-class>Servlets.ConfirmFormServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ThankYouServlet</servlet-name>
        <servlet-class>Servlets.ThankYouServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginFormServlet</servlet-name>
        <servlet-class>Servlets.LoginFormServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>WelcomeServlet</servlet-name>
        <servlet-class>Servlets.WelcomeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>Servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UploadImageServlet</servlet-name>
        <servlet-class>Servlets.UploadImageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ThankYouImageServlet</servlet-name>
        <servlet-class>Servlets.ThankYouImageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewServlet</servlet-name>
        <servlet-class>Servlets.NewServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrationFormServlet</servlet-name>
        <url-pattern>/RegistrationFormServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConfirmFormServlet</servlet-name>
        <url-pattern>/ConfirmFormServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ThankYouServlet</servlet-name>
        <url-pattern>/ThankYouServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginFormServlet</servlet-name>
        <url-pattern>/LoginFormServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WelcomeServlet</servlet-name>
        <url-pattern>/WelcomeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UploadImageServlet</servlet-name>
        <url-pattern>/UploadImageServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ThankYouImageServlet</servlet-name>
        <url-pattern>/ThankYouImageServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewServlet</servlet-name>
        <url-pattern>/NewServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
